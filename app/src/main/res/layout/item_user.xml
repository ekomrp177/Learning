<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardElevation="@dimen/space_8dp"
    android:layout_marginEnd="@dimen/space_16dp"
    android:layout_marginTop="6dp"
    android:layout_marginStart="@dimen/space_16dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="@dimen/space_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_marginVertical="@dimen/space_8dp"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_width="250px"
            android:layout_height="250px"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/img_github"
            android:text="@string/user_name"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_github"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/user_image"
            android:layout_marginStart="@dimen/space_16dp"
            android:src="@drawable/github"
            android:contentDescription="Icon Github" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>